{
	"name": "black-lion",
	"version": "1.0.0",
	"description": "Some experimentation with got and a large api and database",
	"author": {
		"name": "Alex Page",
		"email": "alex@alexpage.com.au",
		"url": "http://alexpage.com.au/"
	},
	"contributors": [
		{
			"name": "Alex Page",
			"email": "alex@alexpage.com.au",
			"url": "http://alexpage.com.au"
		}
	],
	"scripts": {
		"test": "jest",
		"test:detail": "jest --coverage",
		"test:watch": "jest --watch --coverage",
		"start": "npm run build && node dist/init.js",
		"start:verbose": "npm run build && node --inspect dist/init.js --verbose",
		"merge": "npm run build && node dist/bl-merge.js",
		"build": "babel src --out-dir dist --presets=env --sourcemaps",
		"watch": "nodemon --watch src --exec npm run start",
		"watch:verbose": "nodemon --watch src --exec npm run commerce:verbose"
	},
	"engines": {
		"node": "8.9.1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/alex-page/black-lion"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/alex-page/black-lion/issues"
	},
	"homepage": "https://github.com/alex-page/black-lion#readme",
	"dependencies": {
		"async": "^2.6.0",
		"babel-cli": "^6.26.0",
		"babel-preset-env": "^1.6.1",
		"got": "^8.0.0",
		"node-schedule": "^1.2.5",
		"rethinkdb": "^2.3.3"
	},
	"devDependencies": {
		"jest-cli": "^21.2.1",
		"nodemon": "^1.12.1"
	},
	"jest": {
		"testEnvironment": "node",
		"testRegex": "\\.spec.js$",
		"collectCoverageFrom": [
			"src/*.js"
		],
		"roots": [
			"./__tests__/unit/"
		],
		"coverageThreshold": {
			"global": {
				"branches": 0,
				"functions": 0,
				"lines": 0,
				"statements": 0
			}
		}
	}
}
